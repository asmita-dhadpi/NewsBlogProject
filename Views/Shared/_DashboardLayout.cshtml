<!DOCTYPE html>
<html>
<head>
    <title>Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

    <!-- TOP BAR -->
    <nav class="navbar navbar-dark bg-dark px-3">
        <span class="navbar-brand">News Blog</span>

        <div class="ms-auto text-white">
            Hello @Context.Session.GetString("UserName")
            <a href="/Account/Logout" class="btn btn-sm btn-danger ms-2">Logout</a>
        </div>
    </nav>

    <div class="container-fluid">
        <div class="row">

            <!-- SIDEBAR -->
            <div class="col-md-2 bg-primary text-white vh-100 p-3">
                @await Html.PartialAsync("_DashboardMenu")
            </div>

            <!-- CONTENT -->
            <div class="col-md-10 p-4">
                @RenderBody()
            </div>

        </div>
    </div>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
