<!DOCTYPE html>
<html>
<head>
    <title>News Blog</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.js"></script>
</head>
<body class="d-flex flex-column min-vh-100">


    <!-- HEADER -->
    <!-- HEADER -->
    <nav class="navbar navbar-dark bg-dark px-3">
        <span class="navbar-brand">News Blog</span>

        <button class="btn btn-outline-light d-md-none"
                type="button"
                data-bs-toggle="collapse"
                data-bs-target="#categorySidebar">
            ☰ Categories
        </button>

        <div class="ms-auto">
            @if (Context?.Session?.GetInt32("UserId") == null)
            {
                <a href="/Account/Login" class="btn btn-sm btn-light">Login</a>
            }
            else
            {
                <a href="/Dashboard/Index" class="btn btn-sm btn-success">Dashboard</a>
            }
        </div>
    </nav>


    <!-- SEARCH -->
    <div class="container mt-3">
        <form method="get" action="/">
            <div class="input-group">
                <input type="text" name="search" class="form-control" placeholder="Search Here">
                <button class="btn btn-danger">Search</button>
            </div>
        </form>
    </div>

    <!-- CONTENT -->
    <main class="flex-fill">

        <div class="container-fluid mt-3">
            <div class="row">
                <div class="col-md-3 mb-3">
                    <div id="categorySidebar"
                         class="collapse d-md-block"
                         style="max-height: 70vh; overflow-y: auto;">
                        @RenderSection("Categories", required: false)
                    </div>
                </div>

                <div class="col-md-9">
                    @RenderBody()
                </div>
            </div>
        </div>

    </main>



    <!-- FOOTER -->
    <footer class="bg-dark text-white text-center py-2 mt-auto">
        Footer
    </footer>

    <!-- BOOTSTRAP JS (Required for the toggle button) -->
    <script src="https://cdn.jsdelivr.net"></script>

    <!-- THE MISSING SECTION -->
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
